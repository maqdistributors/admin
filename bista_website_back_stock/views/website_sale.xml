<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="bista_products_backinstock" inherit_id="website_sale.products_categories" name="Product Categories">
            <xpath expr="//div[@id='products_grid_before']/ul/li" position="replace">
                <li t-att-class=" 'active' if category is None and url == '/shop' else '' ">
                    <a t-att-href="keep('/shop',category=0)" class="o_not_editable">Newest/All Products</a>
                </li>
                <li t-att-class=" 'active' if category is None and url == '/stock' else '' ">
                    <a href="/stock">Back In Stock </a>
                </li>
            </xpath>
        </template>
    </data>
</openerp>
