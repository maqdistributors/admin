<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="filter_user_product_category_allowed" model="ir.rule">
        <field name="name">Filter Product Category Allowed</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="global" eval="1"/>
        <field name="domain_force">[('categ_id.id','not in', [ c.id for c in user.product_categ_ids ])]</field>

    </record>

    <record id="filter_user_product_variant_category_allowed" model="ir.rule">
        <field name="name">Filter Product Variant Category Allowed</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="global" eval="1"/>
        <field name="domain_force">[('categ_id.id','not in', [ c.id for c in user.product_categ_ids ])]</field>

    </record>

</odoo>