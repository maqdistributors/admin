<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_product_view_form_normal_inherit" model="ir.ui.view">
        <field name="name">product.product.view.form.normal.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='general_information']/group/group[@name='group_standard_price']/field[@name='uom_po_id']"
                   position="after">
                <field name="product_format"/>
                <field name="reporting_weight"/>
                <field name="equivalent_weight"/>
            </xpath>
        </field>
    </record>
</odoo>
